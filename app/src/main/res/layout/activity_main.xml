<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="Simple ListAdapter"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoToSingleItem"
        style="@style/CustomButton"
        android:text="Single item" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoToNestedItems"
        style="@style/CustomButton"
        android:layout_marginVertical="16dp"
        android:text="Nested items" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoToMultiItem"
        style="@style/CustomButton"
        android:text="Multiple items" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

</androidx.appcompat.widget.LinearLayoutCompat>