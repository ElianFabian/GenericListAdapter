<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.elian.generic_list_adapter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GenericListAdapter"
        tools:targetApi="31">
        <activity
            android:name="com.elian.generic_list_adapter.ui.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.GenericListAdapter.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.elian.generic_list_adapter.ui.single_item.SingleItemActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.elian.generic_list_adapter.ui.nested_items.NestedItemsActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.elian.generic_list_adapter.ui.multi_item.MultiItemActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

    </application>

</manifest>